{% extends 'base.html.twig'%}

{% block stylesheets %}

<link rel="stylesheet" href="{{ asset('style/contact.css') }}" />

{% endblock %}


{% block header %}

  <img src="{{ asset('images/TM(7).png') }}" />

{% endblock %}

{% block body %}

  <div class="barre"></div>
  <div class="intro">
    <h3>FORMULAIRE DE CONTACT</h3>
    <p>Pour toutes questions n'hésitez pas à me contacter via ce formulaire</p>
  </div>
  <div class="formulaire">
    <div id="error"></div>
      <div class="form">
      <div>
        <label for="name">NOM :</label>
        <input type="text" id="name" name="user_name">
      </div>
      <div>
        <label for="mail">E-MAIL :</label>
        <input type="email" id="mail" name="user_mail">
      </div>
      <div>
        <label for="msg">MESSAGE :</label>
        <textarea id="msg" name="user_message"></textarea>
      </div>
      <div class="button">
        <button id="button">ENVOYER LE MESSAGE</button>
      </div>
    </div>
  </div>

<script>

  $('.button').click(function(){
    var name = $('#name').val();
    var mail = $('#mail').val();
    var msg = $('#msg').val();
    console.log(name);
    console.log(mail);
    console.log(msg);

     
     $.ajax({
        url : '/sendmail',
        type : 'POST',
        dataType : 'html',
        data : 'name='+name+'&mail='+mail+'&msg='+msg,
        success : function(code_html, statut){ // success est toujours en place, bien sûr !
            
            $('.formulaire').html('Votre message à bien été envoyé !');
        },
 
        error : function(resultat, statut, erreur){
          alert('PAS OK');
        }
 
     });
 

  });

</script>
{% endblock %}

{% block footer %}

    <div class="footer1">
    <div class="info">
      <div class="nom">
        <p>Titouan Morvan<br>
        ~<br>
        Développeur Web</p>
      </div>
      <div class="rs">
        Réseaux Sociaux :
        <a href="https://www.linkedin.com/in/titouan-morvan-06baa214b/"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/01/LinkedIn_Logo.svg/1200px-LinkedIn_Logo.svg.png" alt="Logo linkedin"/></a>
      </div>
    </div>
  </div>

{% endblock %}