<script>
    
    var nombreprojet={{competences|length}} *700;
   
    var curseur=0;


  function slideright() {

    if (curseur > -nombreprojet){
    console.log("Boooooooooooooooo");

      var left=curseur -700;

     $( ".slide" ).css({
       "left" : left+"px"
     })

    curseur = curseur -700;

    }
   }

    function slideleft() {

    if (curseur <= 0){
      console.log("Boooooooooooooooo");

      var left=curseur +700;

     $( ".slide" ).css({
       "left" : left+"px"
     })

    curseur = curseur +700;
    }

    }



  
</script>








